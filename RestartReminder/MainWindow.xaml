<?xml version="1.0" encoding="utf-8"?>
<Window
  x:Class="RestartReminder.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="using:RestartReminder"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="RestartReminder - Settings"
  mc:Ignorable="d"
>
  <Grid Padding="16" RowDefinitions="Auto,Auto,Auto,Auto,Auto,*">
    <TextBlock FontSize="20" FontWeight="SemiBold" Text="Restart Reminder Settings" />
    <NumberBox
      Width="200"
      Margin="0,8,0,16"
      Header="Reminder Interval (minutes)"
      SpinButtonVisibility="Visible"
      Value="{Binding ReminderInterval, Mode=TwoWay}"
    />
  </Grid>
</Window>
